<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:rpc="www.yangnk.com/schema/yangnkrpc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       https://www.yangnk.com/schema/yangnkrpc
       https://www.yangnk.com/schema/yangnk/rpc.xsd">

    <!-- 应用 -->
    <rpc:application name="DEMO_PROVIDER"/>

    <!--服务-->
    <rpc:server port="3333" />s

    <!-- 注册中心 -->
    <rpc:registry ip="127.0.0.1" port="2181" />

    <!-- Demo服务 -->
    <rpc:service id="demoService" name="org.example.api.DemoService" ref="demoServiceImpl"/>
    <bean id="demoServiceImpl" class="org.example.provider.DemoServiceImpl" />
</beans>